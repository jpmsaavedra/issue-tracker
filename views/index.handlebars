
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
			<h1>Coventry Issue Tracker</h1>
			{{#if authorised}}
                <a href="/logout">Log out</a>
                <a href="/secure/submit">Add issue</a>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main class="grid">
        {{#each issues}}
        <section>
            <img src="{{host}}/{{this.photo}}" alt="test" /><br />
            <a href="/secure/issue/{{this.id}}"><h2>{{this.name}}</h1></a><br />
            <h3>{{this.locationDesc}}</h3><br />
            <small>{{this.date}}</small>
        </section>
        {{/each}}
    </main>
	</body>
</html>
